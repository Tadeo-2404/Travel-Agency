extends ./layout/index

block contenido 
    div(class="p-4 pt-32 sm:pt-40 w-full")
        h1(class="uppercase text-center text-4xl font-bold") Packages
        p(class="text-center text-2xl") Check out some of our packages!!

    div(class="grid grid-cols-3 md:grid-cols-2 sm:grid-cols-1 p-4 gap-10 mt-5")
        each package in packages 
            div(class="flex flex-col justify-center items-center bg-indigo-100 rounded-lg text-center gap-4 p-6")
                h2(class="text-4xl font-semibold text-center p-2")= package.titulo

                div(class="flex justify-center gap-x-3")
                    div(class="text-center flex items-center text-xl")
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-currency-dollar" width="40" height="40" viewBox="0 0 24 24" stroke-width="1.5" stroke="#00abfb" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M16.7 8a3 3 0 0 0 -2.7 -2h-4a3 3 0 0 0 0 6h4a3 3 0 0 1 0 6h-4a3 3 0 0 1 -2.7 -2" />
                            <path d="M12 3v3m0 12v3" />
                        </svg>
                        p(class="font-medium")= package.precio

                    div(class="text-center flex items-center text-xl")
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-discount" width="40" height="40" viewBox="0 0 24 24" stroke-width="1.5" stroke="#00abfb" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <line x1="9" y1="15" x2="15" y2="9" />
                            <circle cx="9.5" cy="9.5" r=".5" fill="currentColor" />
                            <circle cx="14.5" cy="14.5" r=".5" fill="currentColor" />
                            <circle cx="12" cy="12" r="9" />
                        </svg>
                        p(class="font-medium")= package.descuento

                div(class="text-center flex items-center text-xl gap-x-4")
                p= package.descripcion.slice(0, 200)




