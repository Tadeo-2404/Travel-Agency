extends ./layout/index

block contenido 
    div(class="p-4 pt-32 sm:pt-40 w-full")
        h1(class="uppercase text-center text-4xl font-bold") destinations 
        p(class="text-center text-2xl") Check out some of our most famous destinations!!

    div(class="grid grid-cols-3 md:grid-cols-2 sm:grid-cols-1 p-4 gap-10 mt-5")
        each destination in destinations 
            div(class="flex flex-col justify-center items-center bg-indigo-100 rounded-lg text-center gap-4 p-6")
                img(src=`/imgSimp/destinations/${destination.imagen}.webp`, alt="destination-image" class="w-full h-full")
                h2(class="text-4xl font-semibold text-center p-2")= destination.titulo
                div(class="text-center flex items-center text-xl gap-x-4")
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-calendar-event" width="52" height="52" viewBox="0 0 24 24" stroke-width="1.5" stroke="#DC2626" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <rect x="4" y="5" width="16" height="16" rx="2" />
                                <line x1="16" y1="3" x2="16" y2="7" />
                                <line x1="8" y1="3" x2="8" y2="7" />
                                <line x1="4" y1="11" x2="20" y2="11" />
                                <rect x="8" y="15" width="2" height="2" />
                    </svg>
                    p(class="font-medium")= destination.fecha_ida
                    p(class="font-medium")= destination.fecha_vuelta

                div(class="text-center flex items-center text-xl gap-x-4")
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-users" width="52" height="52" viewBox="0 0 24 24" stroke-width="1.5" stroke="#DC2626" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <circle cx="9" cy="7" r="4" />
                        <path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
                        <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                        <path d="M21 21v-2a4 4 0 0 0 -3 -3.85" />
                    </svg>
                        p(class="font-medium") Available:
                        p= destination.disponibles
                p= destination.descripcion.slice(0, 200)
                a(href=`/destinations/${destination.slug}`) 
                    button(class="bg-red-600 text-white p-3 uppercase flex gap-x-2 hover:scale-110") See Destination
